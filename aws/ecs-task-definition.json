{
  "family": "langchain-pepwave-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "3072",
  "executionRoleArn": "arn:aws:iam::003765455645:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::003765455645:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "postgres",
      "image": "postgres:17-alpine",
      "essential": true,
      "memory": 1024,
      "environment": [
        {
          "name": "POSTGRES_DB",
          "value": "langgraph"
        },
        {
          "name": "POSTGRES_USER",
          "value": "postgres"
        }
      ],
      "secrets": [
        {
          "name": "POSTGRES_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:003765455645:secret:langchain-pepwave/POSTGRES_PASSWORD"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "pg_isready -U postgres"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/langchain-pepwave",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "postgres"
        }
      }
    },
    {
      "name": "web",
      "image": "003765455645.dkr.ecr.us-east-1.amazonaws.com/langchain-pepwave:latest",
      "essential": true,
      "memory": 2048,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:${POSTGRES_PASSWORD}@localhost:5432/langgraph?sslmode=disable"
        }
      ],
      "secrets": [
        {
          "name": "POSTGRES_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:003765455645:secret:langchain-pepwave/POSTGRES_PASSWORD"
        },
        {
          "name": "PINECONE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:003765455645:secret:langchain-pepwave/PINECONE_API_KEY"
        },
        {
          "name": "OPENAI_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:003765455645:secret:langchain-pepwave/OPENAI_API_KEY"
        },
        {
          "name": "COHERE_API_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:003765455645:secret:langchain-pepwave/COHERE_API_KEY"
        }
      ],
      "dependsOn": [
        {
          "containerName": "postgres",
          "condition": "HEALTHY"
        }
      ],
      "healthCheck": {
        "command": ["CMD", "curl", "-f", "http://localhost:8000/api/threads"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/langchain-pepwave",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "web"
        }
      }
    }
  ]
}
